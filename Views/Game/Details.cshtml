@model thirdPractice.Models.Game

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1>Details</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Game</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.GameName) </dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.GameName) </dd>
                <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Description) </dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.Description) </dd>
                <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Platform) </dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.Platform) </dd>
                <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Price) </dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.Price) </dd>
                <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Image) </dt>
                <dd class="col-sm-10">
                    <img src="@Model.Image" alt="Game Image" class="img-thumbnail mt-1" style="max-width: 150px;" />
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Regresar al indice</a>
    </div>
</div>
