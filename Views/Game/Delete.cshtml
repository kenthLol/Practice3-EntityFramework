@model thirdPractice.Models.Game

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1>Eliminar</h1>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">¡Atención!</h4>
        <p>Estás a punto de eliminar un juego. Esta acción no se puede deshacer.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Juego</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Nombre del Juego</dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.GameName) </dd>
                <dt class="col-sm-2">Descripción</dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.Description) </dd>
                <dt class="col-sm-2">Plataforma</dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.Platform) </dd>
                <dt class="col-sm-2">Precio</dt>
                <dd class="col-sm-10"> @Html.DisplayFor(model => model.Price) </dd>
                <dt class="col-sm-2">Imagen</dt>
                <dd class="col-sm-10">
                    <img src="@Model.Image" alt="Imagen del Juego" class="img-thumbnail mt-1" style="max-width: 150px;" />
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        </form>
    </div>
</div>